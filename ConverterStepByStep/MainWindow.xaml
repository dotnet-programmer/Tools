<Window x:Class="ConverterStepByStep.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:ConverterStepByStep"
		mc:Ignorable="d"
		Title="Converter step by step"
		WindowStartupLocation="CenterScreen"
		Height="484"
		Width="1142"
		KeyDown="Window_KeyDown">

	<Grid>
		<TextBox x:Name="BaseNumber"
				 HorizontalAlignment="Left"
				 Height="26"
				 Margin="78,48,0,0"
				 TextWrapping="Wrap"
				 VerticalAlignment="Top"
				 Width="240"
				 VerticalContentAlignment="Center"
				 HorizontalContentAlignment="Center" />
		<Label Content="Number:"
			   HorizontalAlignment="Left"
			   Margin="22,48,0,0"
			   VerticalAlignment="Top" />
		<Button x:Name="BtnConvert"
				Content="Convert"
				HorizontalAlignment="Left"
				Margin="78,93,0,0"
				VerticalAlignment="Top"
				Width="240"
				Height="26"
				Click="OnBtnConvertClick" />
		<Label Content="BIN (2)"
			   HorizontalAlignment="Left"
			   Margin="27,150,0,0"
			   VerticalAlignment="Top" />
		<Label Content="OCT (8)"
			   HorizontalAlignment="Left"
			   Margin="23,181,0,0"
			   VerticalAlignment="Top"
			   RenderTransformOrigin="0.022,0.561" />
		<Label Content="HEX (16)"
			   HorizontalAlignment="Left"
			   Margin="18,212,0,0"
			   VerticalAlignment="Top" />
		<TextBox x:Name="BinNumber"
				 HorizontalAlignment="Left"
				 Height="26"
				 Margin="78,150,0,0"
				 TextWrapping="Wrap"
				 VerticalAlignment="Top"
				 Width="240"
				 VerticalContentAlignment="Center"
				 HorizontalContentAlignment="Center" />
		<TextBox x:Name="OctNumber"
				 HorizontalAlignment="Left"
				 Height="26"
				 Margin="78,181,0,0"
				 TextWrapping="Wrap"
				 VerticalAlignment="Top"
				 Width="240"
				 VerticalContentAlignment="Center"
				 HorizontalContentAlignment="Center" />
		<TextBox x:Name="HexNumber"
				 HorizontalAlignment="Left"
				 Height="26"
				 Margin="78,212,0,0"
				 TextWrapping="Wrap"
				 VerticalAlignment="Top"
				 Width="240"
				 VerticalContentAlignment="Center"
				 HorizontalContentAlignment="Center" />
		<TextBox x:Name="TxtBinSteps"
				 HorizontalAlignment="Left"
				 Margin="348,48,0,0"
				 TextWrapping="Wrap"
				 VerticalAlignment="Top"
				 Width="240"
				 Height="358" />
		<TextBox x:Name="TxtOctSteps"
				 HorizontalAlignment="Left"
				 Margin="593,48,0,0"
				 TextWrapping="Wrap"
				 VerticalAlignment="Top"
				 Width="240"
				 Height="358" />
		<TextBox x:Name="TxtHexSteps"
				 HorizontalAlignment="Left"
				 Margin="838,48,0,0"
				 TextWrapping="Wrap"
				 VerticalAlignment="Top"
				 Width="240"
				 Height="358" />
		<Label Content="BIN:"
			   HorizontalAlignment="Left"
			   Margin="452,17,0,0"
			   VerticalAlignment="Top" />
		<Label Content="OCT:"
			   HorizontalAlignment="Left"
			   Margin="695,17,0,0"
			   VerticalAlignment="Top" />
		<Label Content="HEX:"
			   HorizontalAlignment="Left"
			   Margin="941,17,0,0"
			   VerticalAlignment="Top" />
	</Grid>
</Window>