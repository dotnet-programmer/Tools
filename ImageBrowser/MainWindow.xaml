<Window x:Class="ImageBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageBrowser"
        mc:Ignorable="d"
		Title="Image Browser"
		Height="450"
		Width="800"
		Background="#FF444444"
		WindowStartupLocation="CenterScreen"
		WindowState="Maximized"
		KeyDown="Window_KeyDown"
		MouseWheel="Window_MouseWheel">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="9*" />
			<ColumnDefinition Width="91*" />
		</Grid.ColumnDefinitions>
		<Image x:Name="ImgViewer"
			   Margin="10,10,10,45"
			   MouseLeftButtonDown="ImgViewer_MouseLeftButtonDown"
			   Grid.ColumnSpan="2" />
		<Button x:Name="BtnPrevious"
				Content="&lt;&lt;"
				Margin="10,0,0,10"
				Height="30"
				VerticalAlignment="Bottom"
				HorizontalAlignment="Left"
				Width="300"
				Background="#FF7C7C7C"
				Click="BtnPrevious_Click"
				Focusable="False"
				Grid.ColumnSpan="2" />
		<Button x:Name="BtnRandom"
				Content="Losuj"
				Margin="243,0,315,10"
				Height="30"
				VerticalAlignment="Bottom"
				Background="#FF7C7C7C"
				Click="BtnRandom_Click"
				Focusable="False"
				Grid.Column="1" />
		<Button x:Name="BtnNext"
				Content="&gt;&gt;"
				Margin="0,0,10,10"
				Height="30"
				VerticalAlignment="Bottom"
				HorizontalAlignment="Right"
				Width="300"
				Background="#FF7C7C7C"
				Click="BtnNext_Click"
				Focusable="False"
				Grid.Column="1" />
	</Grid>
</Window>
